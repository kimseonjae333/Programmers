import java.util.ArrayList;

class Solution {
    public int solution(int n) {
        ArrayList<Integer> arr = new ArrayList<Integer>();
        int i = 1;
        while(2*i <= n){
            arr.add(2*i);
            i++;
        }
        
        int answer = 0;
        for(int j = 0; j < arr.size(); j++){
            answer += arr.get(j);
        }
        return answer;
    }
}
